{
  "name": "@shahafc13/create-node-ts-app",
  "version": "1.1.0",
  "description": "A CLI tool to generate Node.js + TypeScript projects from predefined templates.",
  "main": "dist/index.js",
  "bin": {
    "create-node-ts-app": "bin/create-node-ts-app.js"
  },
  "type": "module",
  "engines": {
    "node": ">=22.x"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "rollup -c rollup.config.mjs",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "npm run lint-code",
    "lint:fix": "npm run lint-code -- --fix",
    "lint-code": "eslint .",
    "prepare": "husky install && npm run build",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "bin",
    "src/templates",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shahafc13/create-node-ts-app.git"
  },
  "keywords": [
    "cli",
    "node",
    "nodejs",
    "typescript",
    "generator",
    "boilerplate",
    "scaffolding",
    "fastify"
  ],
  "author": "Shahaf Cohen <shahafcon@gmail.com> (https://github.com/shahafc13)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shahafc13/create-node-ts-app/issues"
  },
  "homepage": "https://github.com/shahafc13/create-node-ts-app#readme",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/eslint__js": "9.14.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "lint-staged": "^16.1.5",
    "prettier": "3.6.2",
    "rollup": "^4.49.0",
    "rollup-plugin-copy": "^3.5.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0"
  }
}
